<!DOCTYPE html>
<html lang="en">
<!--header-->
<%- include("../Util/header.ejs") %>
    <!--End Header-->

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <%- include("../Util/menu.ejs") %>
                <!-- End of Sidebar -->

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content" class="container">

                        <!-- Topbar -->
                        <%- include("../Util/topbar.ejs") %>
                            <!-- End of Topbar -->

                            <!--Nội dung chính-->
                            <div class="alert alert-primary">
                                <h3>Sửa đối tượng cần hỗ trợ</h3>
                            </div>
                            <div>
                                &ensp;&ensp;
                                <button class="btn btn-danger" onclick="goBack()">Trở lại</button>
                            </div>
                            <hr class="sidebar-divider">
                            <!-- Roitation Utilities -->
                            <div >
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết đối tượng:</h6>
                                    <% if(message){%>
                                        <div class="alert alert-danger" style="color: red;"><%= message %></div>
                                    <% } %> 
                                </div>
                                <div class="container-fluid">
                                    <form action="/admin/xulyUpdate" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate >
                                        <div class="row">
                                            <div class="col-sm-4"  >
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" >Mã SO:</label>
                                                    <input class="form-control" name="IdSO"  type="text" value="<%= SO[0].IdSO %>" readonly="readonly" required >
                                                </div>
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" for="FN">Name SO:</label>
                                                    <input class="form-control" type="text" name="tenSO" value="<%= SO[0].NameSO %>" placeholder="Full Name " id="FN" required  >
                                                    <span id="tbFN"></span> 
                                                    <div class="valid-feedback">Valid.</div>
                                                    <div class="invalid-feedback">Vui lòng nhập FirstName.</div>
                                                </div> 
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" for="Address">Address:</label>
                                                    <input class="form-control" type="text" name="address" value="<%= SO[0].Address %>" placeholder="Address" id="Address" required >
                                                    <span id="tbADDRESS"></span>
                                                    <div class="valid-feedback">Valid.</div>
                                                    <div class="invalid-feedback">Vui lòng nhập số nhà.</div>
                                                </div>

                                            </div>
                                            <div class="col-sm-4"  >
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" for="province">Tỉnh/Thành Phố:</label>
                                                    
                                                    <select class="form-control" name="tinh" id="sel1" onchange="validateSelect_Tinh(event)" required>
                                                        <option value="<%= tinh[0].id %>"><%= tinh[0].name %> </option>
                                                        <% for (let i=0; i < mapVN.length; i++) { const element=mapVN[i]; %>
                                                            <option value="<%= element.id %>">
                                                                <%= element.name %>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                    <div class="valid-feedback">Valid.</div>
                                                    <div class="invalid-feedback">Vui lòng chọn Tỉnh/ thành phố.</div>
                                                </div>
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" for="dicstrict">Quận/Huyện:</label>
                                                    <select class="form-control" name="huyen" id="huyen" onchange="validateSelect_Huyen(event)" required>
                                                        <option value="<%= huyen[0].id %>"> <%= huyen[0].name %></option>
                                                    </select>
                                                    <div class="valid-feedback">Valid.</div>
                                                    <div class="invalid-feedback">Vui lòng chọn quận huyện.</div>
                                                </div>
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" for="commune">Xã/Phường:</label>
                                                    <select class="form-control" name="xa" id="Phuong" required>
                                                        <option value="<%= xa[0].id %>"><%= SO[0].Commune %></option>
                                                    </select>
                                                    <div class="valid-feedback">Valid.</div>
                                                    <div class="invalid-feedback">Vui lòng chọn phường xã.</div>
                                                </div> 
                                            </div>
                                            <div class="col-sm-4" > 
                                                <div class="form-group" style="width:250px">
                                                    <label class="font-weight-bold" for="hinh">Hình :</label>
                                                    <input class="form-control" accept="image/*" type='file' id="imgInp" alt="<%= SO[0].Image %>" name="hinh"   >
                                                    <span id="tbHINH"></span>
                                                </div>
                                                <img id="blah" src="./Images/supported_object/<%=  SO[0].Image %>"class="rounded-circle" style="width:250px ; height:250px;" alt="Chưa chọn hình" />
                                                
                                            </div>
                                            
                                        </div>
                                        <div class="form-group" style="width:250px; margin-left: 20px; margin-top: 100px;">
                                            <input class="btn btn-success" type="submit" value="Update" placeholder=" " id=""  >
                                        </div>
                                    </form>
                                   
                                </div>
                            </div>
                            <!--/ Roitation Utilities -->
                            
                            
                    <div>
                                
                </div>
                <!--/Nội dung chính-->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include("../Util/footer.ejs") %> 
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/admin/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="backend/vendor/jquery/jquery.min.js"></script>
    <script src="backend/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <!-- Custom scripts for all pages-->
    <script src="backend/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="backend/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="backend/js/demo/chart-area-demo.js"></script>
    <script src="backend/js/demo/chart-pie-demo.js"></script>
    <!-- Load hình -->
    <script>
        imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
          blah.src = URL.createObjectURL(file)
        }
      }
    </script> 
    <!--Kiểm tra rỗng khi nhập -->
    <script>
        // Disable form submissions if there are invalid fields
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                // Get the forms we want to add validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <!--Lây địa chỉ-->
    
    <script>
        function validateSelect_Tinh(evt) {
            let valueselect = evt.target.value;

            let huyenshow = document.getElementById('huyen');
            
            $.ajax({
                method:'get',
                url:'/admin/GetDistricts',
                data:{
                idtinh: valueselect
                },
                success: function(data){
                huyenshow.innerHTML = '';
                for (let i = 0; i < data.length; i++) {
                    huyenshow.innerHTML += `<option value="${data[i].id}">${data[i].name}</option>`;
                }
                
                },
                error: function(){

                }
            })

        }
        function validateSelect_Huyen(evt) {
            let valueselect = evt.target.value;
            let valuetinh = $('#sel1').val();
            let xashow = document.getElementById('Phuong');
            $.ajax({
                method:'GET',
                url:'/admin/GetPhuong',
                data:{
                idhuyen: valueselect,
                idtinh: valuetinh
                },
                success: function(data){
                    xashow.innerHTML="";
                    for (let i = 0; i < data.length; i++) {
                    xashow.innerHTML += `<option value="${data[i].id}">${data[i].name}</option>`;
                }
                },
                error: function(){

                }
            })

        }

    </script>
</body>

</html>